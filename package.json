{
  "name": "presente-site",
  "type": "module",
  "version": "1.0.0",
  "description": "Site de presente otimizado com Tailwind CSS",
  "main": "index.html",
  "scripts": {
    "build": "tailwindcss -i ./assets/styles.css -o ./assets/output.css --watch",
    "build:prod": "tailwindcss -i ./assets/styles.css -o ./assets/output.css --minify",
    "build:css": "postcss assets/styles.css -o assets/styles.min.css",
    "watch:css": "postcss -w assets/styles.css -o assets/styles.min.css"
  },
  "keywords": [
    "presente",
    "tailwind",
    "css",
    "otimizado"
  ],
  "author": "Mazzi",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "cssnano": "^7.1.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.0"
  }
}
